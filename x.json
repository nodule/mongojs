{
  "name": "mongojs",
  "description": "MongoJS for ChiÏ‡",
  "version": "0.0.3",
  "licences": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodule/mongojs.git"
  },
  "dependencies": {
    "mongojs": "latest"
  },
  "nodes": [
    {
      "ports": {
        "input": {
          "db": {
            "type": "object",
            "title": "mongojs db handle"
          }
        },
        "output": {}
      },
      "phrases": {
        "active": "Closing database connection"
      },
      "description": "mongojs close",
      "ns": "mongojs",
      "name": "close",
      "env": "server",
      "fn": "input.db.close()\n"
    },
    {
      "ports": {
        "input": {
          "collection": {
            "type": "string",
            "title": "Collection",
            "description": "The collection name for this database",
            "required": true
          },
          "db": {
            "type": "object",
            "title": "Db Handle",
            "description": "Expects the `db` port of the mongojs.db node",
            "readonly": true,
            "required": true
          }
        },
        "output": {
          "collection": {
            "type": "object",
            "title": "Db Collection handle",
            "readonly": true
          }
        }
      },
      "phrases": {
        "active": "Opening the {{input.collection}} collection"
      },
      "description": "mongojs collection",
      "ns": "mongojs",
      "name": "collection",
      "env": "server",
      "fn": "output = {\n  collection: input.db.collection(input.collection)\n}\n"
    },
    {
      "dependencies": {
        "npm": {
          "mongojs": "latest"
        }
      },
      "ports": {
        "input": {
          "connection_string": {
            "type": "string",
            "title": "Connection String",
            "description": "The connection string should follow the format described in [the mongo connection](http://docs.mongodb.org/manual/reference/connection-string/) string docs",
            "require": true
          }
        },
        "output": {
          "db": {
            "type": "object"
          }
        }
      },
      "phrases": {
        "active": "Creating mongodb connection: {{input.in}}"
      },
      "description": "mongojs database",
      "ns": "mongojs",
      "name": "db",
      "env": "server",
      "fn": "output = {\n  db: mongojs(input.connection_string)\n}\n"
    },
    {
      "ports": {
        "input": {
          "collection": {
            "type": "object",
            "title": "A mongojs.collection handle",
            "required": true,
            "readonly": true
          },
          "criteria": {
            "type": "object",
            "title": "A mongojs criteria JSON object",
            "required": true
          }
        },
        "output": {
          "error": {
            "title": "Error",
            "type": "object"
          },
          "documents": {
            "title": "Documents",
            "type": "object"
          }
        }
      },
      "phrases": {
        "active": "Performing find based on the specified criteria"
      },
      "description": "mongojs find",
      "ns": "mongojs",
      "name": "find",
      "env": "server",
      "fn": "output = [input.collection, 'find', input.criteria]\n"
    },
    {
      "ports": {
        "input": {
          "collection": {
            "type": "object",
            "title": "A mongojs.collection handle",
            "required": true,
            "readonly": true
          }
        },
        "output": {
          "error": {
            "title": "Error",
            "type": "object"
          },
          "documents": {
            "title": "Documents",
            "type": "object"
          }
        }
      },
      "phrases": {
        "active": "Finding all documents"
      },
      "description": "MongoJS find all",
      "ns": "mongojs",
      "name": "findAll",
      "env": "server",
      "fn": "output = [input.collection, 'find']\n"
    },
    {
      "ports": {
        "input": {
          "collection": {
            "type": "object",
            "title": "a mongojs.collection handle",
            "required": true,
            "readonly": true
          },
          "document": {
            "type": "object",
            "title": "JSON document",
            "required": true
          }
        },
        "output": {
          "error": {
            "type": "object"
          },
          "docs": {
            "type": "object"
          },
          "n": {
            "type": "object"
          }
        }
      },
      "phrases": {
        "active": "Insering document into the collection"
      },
      "description": "mongojs insert",
      "ns": "mongojs",
      "name": "insert",
      "env": "server",
      "fn": "output = [input.collection, 'insert', input.document]\n"
    },
    {
      "ports": {
        "input": {
          "collection": {
            "type": "object"
          },
          "criteria": {
            "type": "object"
          }
        },
        "output": {
          "success": {
            "type": "boolean"
          }
        }
      },
      "phrases": {
        "active": "Removing document(s) based on the specified criteria"
      },
      "description": "mongojs remove",
      "ns": "mongojs",
      "name": "remove",
      "env": "server",
      "fn": "output = [input.collection, 'remove', input.criteria]\n"
    },
    {
      "ports": {
        "input": {
          "collection": {
            "type": "object",
            "title": "a mongojs.collection handle",
            "required": true,
            "readonly": true
          },
          "selector": {
            "type": "object",
            "title": "Selector",
            "required": true
          },
          "document": {
            "type": "object",
            "title": "JSON document",
            "required": true
          }
        },
        "output": {
          "error": {
            "type": "object"
          },
          "docs": {
            "type": "object"
          },
          "n": {
            "type": "object"
          }
        }
      },
      "phrases": {
        "active": "Updating document"
      },
      "description": "mongojs update",
      "ns": "mongojs",
      "name": "update",
      "env": "server",
      "fn": "output = [input.collection, 'update', input.selector, input.document]\n"
    }
  ],
  "twigs": [],
  "env": "server"
}